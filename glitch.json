
{
  "install": "pip3 install --user -r requirements.txt",
  "start": "bash start.sh",
  "watch": {
    "ignore": [
      "\\.pyc$",
      "__pycache__"
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh"
      ]
    }
  }
}